<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd"
        objectQuotingStrategy="QUOTE_ALL_OBJECTS">
    <changeSet id="1" author="logof">
        <createTable tableName="users">
            <column name="id" type="bigint" autoIncrement="true" startWith="1" incrementBy="1">
                <constraints primaryKey="true" primaryKeyName="users-pk-id" nullable="false"/>
            </column>
            <column name="login" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="email" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="password" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addUniqueConstraint tableName="users" columnNames="login" constraintName="users-uk-1"/>
        <addUniqueConstraint tableName="users" columnNames="email" constraintName="users-uk-2"/>

        <createTable tableName="user_roles">
            <column name="user_id" type="bigint">
                <constraints nullable="false" />
            </column>
            <column name="role" type="varchar(255)">
                <constraints nullable="false" />
            </column>
        </createTable>
        <addUniqueConstraint tableName="user_roles" columnNames="role" constraintName="user_roles-uk-1"/>
        <addForeignKeyConstraint baseTableName="user_roles" baseColumnNames="user_id"
                                 constraintName="user_roles-fk-1"
                                 referencedTableName="users" referencedColumnNames="id" />
    </changeSet>
</databaseChangeLog>